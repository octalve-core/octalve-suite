{
  "name": "Message",
  "type": "object",
  "properties": {
    "phase_id": {
      "type": "string",
      "description": "Reference to phase"
    },
    "project_id": {
      "type": "string",
      "description": "Reference to project"
    },
    "sender_email": {
      "type": "string"
    },
    "sender_name": {
      "type": "string"
    },
    "content": {
      "type": "string"
    },
    "message_type": {
      "type": "string",
      "enum": ["user", "system"],
      "default": "user"
    },
    "is_resolved": {
      "type": "boolean",
      "default": false
    },
    "reply_to_id": {
      "type": "string",
      "description": "Reference to parent message"
    }
  },
  "required": ["phase_id", "project_id", "content"]
}
